{
	"$schema": "https://schemas.wp.org/wp/6.0/block.json",
	"apiVersion": 3,
	"name": "wp-plugin-gutenberg-blocks/example-service-hero",
	"title": "Hero Servicio Destacado",
	"description": "Bloque para presentar servicios destacados con video demostrativo a la izquierda e información comercial a la derecha",
	"category": "wp-plugin-gutenberg-blocks",
	"icon": "image-flip-horizontal",
	"supports": {
		"html": false,
		"color": {
			"background": true,
			"text": false,
			"gradients": false
		},
		"spacing": {
			"padding": true,
			"margin": true
		},
		"align": ["full", "wide"]
	},
	"textdomain": "wp-plugin-gutenberg-blocks",
	"script": "file:./example-service-hero.js",
	"style": "file:./style.css",
	"editorStyle": "file:./editor.css",
	"attributes": {
		"video_file": {
			"type": "string",
			"default": ""
		},
		"video_poster": {
			"type": "string",
			"default": ""
		},
		"titulo_principal": {
			"type": "string",
			"default": "DERMACOSMETO"
		},
		"subtitulo_autor": {
			"type": "string",
			"default": "X Stefany Varas"
		},
		"descripcion_corta": {
			"type": "string",
			"default": "Cosmetología y dermatología"
		},
		"cta_texto": {
			"type": "string",
			"default": "EVALUACIÓN FACIAL POR $10.990"
		},
		"cta_link": {
			"type": "string",
			"default": "#"
		}
	}
}
